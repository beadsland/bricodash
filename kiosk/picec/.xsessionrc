#!/bin/sh

##
# Autologin under lightdm.
#
# Provided by @mz@hackmanhattan.slack.com, 2019.
##

xset -dpms
xset s off
xset s noblank
unclutter &
matchbox-window-manager &
rm -r ~/.cache/chromium/Default/Cache/*
chromium-browser --force-device-scale-factor=1.375 --disable-infobars --kiosk --app=http://bricolage.hackmanhattan.com:8888/hm/dash/?whoami=pidashboard

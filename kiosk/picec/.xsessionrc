#!/bin/bash

##
# Autologin under lightdm.
#
# Provided by @mz@hackmanhattan.slack.com, 2019.
##

FORCE_SCALE=1.5
WHOAMI=$(uname -n)

xset -dpms
xset s off
xset s noblank
unclutter &
matchbox-window-manager &

while :; do
    rm -r ~/.cache/chromium/Default/Cache/*
    chromium-browser --force-device-scale-factor=$FORCE_SCALE --disable-infobars --kiosk --app=http://bricolage.hackmanhattan.com:8888/hm/dash/?whoami=$WHOAMI
    sleep 30
done
